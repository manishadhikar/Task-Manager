@model Role

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form asp-action="Edit" class="mb-3" method="post">
    <input asp-for="@Model.Id" hidden />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAdmin" class="control-label"></label>
        <div class="form-check">
            <input class="form-check-input" asp-for="IsAdmin" type="radio" value="true" /> Yes
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="IsAdmin" type="radio" value="false" /> No
        </div>
        <span asp-validation-for="IsAdmin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
