@using Application.ViewModels.Tasks;
@model List<TaskDetailsViewModel>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Task List </h2>
    </div>
</div
  <div class="p-4 border rounded">
           
            @if (Model.Count() > 0)
            {
                <table class="table table-borderless">
                    <tr>
                        <th>
                            Task Name
                        </th>
                        <th>
                            Details
                        </th>
                        <th>
                            CreatedBy
                        </th>
                        <th>
                            Assigned-To
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.CreatedBy
                            </td>
                            <td>
                                @item.AssignedTo
                            </td>
                            <td>
                                @item.Status
                            </td>
                             <td>
                                <a asp-action="Index" asp-controller="ActivityLog" asp-route-id=@item.Id asp-route-id2=@item.AssignedToId class="btn btn-primary">View Log</a>
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
